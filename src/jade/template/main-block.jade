    .sorting
      form(action="#" method="post").sorting-sel
        span.sorting-sel__by.sorting__by Сортировать по
        select.sorting-sel__sel
          - var sortSelect = ['по цене', 'по популярности'];
          each item in sortSelect
            option.sorting-sel__option= item


    .view
      span.view__descr Вид каталога
      -var view = ['norm', 'middle', 'min']
      ul.view__list
        each item in view
          if item==='norm'
            li.view__item
              a.view__link(href="#" data-class="view-switch--#{item}")
                span.view--active(class="view--#{item}")
          else
            li.view__item
              a.view__link(href="#" data-class="view-switch--#{item}")
                span(class="view--#{item}")



